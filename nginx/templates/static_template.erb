server {
    listen <%= port %>;
    <% if ipv6 -%>
        listen [::]:<%= port%> <% if default_server%> default_server ipv6only=on<% end%>;
    <% end -%>
    <%- if ssl and ssl -%>
       listen <%= ssl_port %> ssl;
    <%- end -%>
    server_name <%= domain %>;

    include error/error.conf;

    location / {
        root <%= directory %>;
    }

}
