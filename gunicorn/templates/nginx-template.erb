upstream <%= site_name %> {
    server unix:/tmp/gunicorn-<%= site_name %>.sock;
}

server {
    listen 80;
    server_name <%= domain %>;

    include error/error.conf;


    <% if static_dir -%>
    location /static {
        alias <%= static_dir %>;
    }
    <% end -%>

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        proxy_pass http://<%= site_name %>;
    }
}

